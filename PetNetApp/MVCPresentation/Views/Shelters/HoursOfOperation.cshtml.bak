                    @*<input type="text" name="OpenHour" value="@fixedOpeningTime" /> - <input type="text" name="CloseHour" value="@fixedClosingTime" />*@
                    @Html.TextBoxFor(item => item.OpenHour)
                </div>
                }
                else
