        {
            <th>
            </th>
        }
    </tr>

    @foreach (var hoursOfOperation in Model)
    {

        <tr>
            <td>
                @{
                    switch (dayOfWeek)
                    {
                        case 0:
                            <text>
                                <p>Sunday</p>
                            </text>
                            dayString = "Sunday";
                            break;
                        case 1:
                            <text>
                                <p>Monday</p>
                            </text>
                            dayString = "Monday";
                            break;
                        case 2:
                            <text>
                                <p>Tuesday</p>
                            </text>
                            dayString = "Tuesday";
                            break;

                        case 3:
                            <text>
                                <p>Wednesday</p>
                            </text>
                            dayString = "Wednesday";
                            break;

                        case 4:
                            <text>
                                <p>Thursday</p>
                            </text>
                            dayString = "Thursday";
                            break;

                        case 5:
                            <text>
                                <p>Friday</p>
                            </text>
                            dayString = "Friday";
                            break;

                        case 6:
                            <text>
                                <p>Saturday</p>
                            </text>
                            dayString = "Saturday";
                            break;
                    }
                }
            </td>
            @{
                TimeSpan timeToFix = TimeSpan.Parse(hoursOfOperation.OpenHour.ToString());
                DateTime fixedTime = DateTime.Today.Add(timeToFix);
                String fixedOpeningTime = fixedTime.ToString("hh:mm tt");

                timeToFix = TimeSpan.Parse(hoursOfOperation.CloseHour.ToString());
                fixedTime = DateTime.Today.Add(timeToFix);
                String fixedClosingTime = fixedTime.ToString("hh:mm tt");
            }
            <td>
