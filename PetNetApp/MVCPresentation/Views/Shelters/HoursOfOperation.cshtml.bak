@model List<DataObjects.HoursOfOperation>

@section styles
{
    <link href="~/Content/ShelterNetwork.css" rel="stylesheet" />
}


@{
    ViewBag.Title = "Hours Of Operation";
}

@{
    int dayOfWeek = 0;
    string dayString = "";
}

<h2 class="text-center">Hours of Operation</h2>
<table class="table">
    <tr>
        <th>
            <p>Day of Week</p>
        </th>
        <th>
            <a>Hours of Operation</a>
        </th>
