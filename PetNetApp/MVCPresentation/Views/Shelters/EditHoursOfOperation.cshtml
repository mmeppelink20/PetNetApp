@model MVCPresentation.Models.EditHoursOfOperationViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br>
        <h4 >Edit Hours of Operation for</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Day of Week</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DayOfWeek, new SelectList(new List<string> { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" }))
                @Html.ValidationMessageFor(model => model.DayOfWeek, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <p class="font-weight-bold">Enter hours as (HH:MM AM) or (HH:MM PM)</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Opening Hour</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OpenHour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OpenHour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Closing Hour</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CloseHour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CloseHour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn-primary"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Return to Shelter List", "ShelterNetwork")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
