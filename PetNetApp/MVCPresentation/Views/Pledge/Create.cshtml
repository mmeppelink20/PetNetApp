@model DataObjects.PledgeVM

@{
    ViewBag.Title = "Create";
}

<h2>Create a New Pledge</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<form>
    @Html.HiddenFor(model => model.FundraisingEventId, new { @Value = ViewBag.FundrasingEventId })
    <div class="form-row">
        <div class="form-group col-md-3">
            <label class="control-label col-sm-2">Amount</label>
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label class="control-label col-sm-2">Target</label>
            @Html.EditorFor(model => model.Target, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label class="control-label col-sm-2">Requirement</label>
            @Html.EditorFor(model => model.Requirement, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Requirement, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label class="control-label col-sm-2">Message</label>
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Email</label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="control-label col">Phone</label>
        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label class="control-label col">Given Name</label>
            @Html.EditorFor(model => model.GivenName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GivenName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label class="control-label col">Family Name</label>
            @Html.EditorFor(model => model.FamilyName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="form-check-label">Contact By Phone</label>
        @Html.EditorFor(model => model.IsContactPreferencePhone)
        @Html.ValidationMessageFor(model => model.IsContactPreferencePhone, "", new { @class = "text-danger" })
    </div>
    <p>@ViewBag.PledgeStatus</p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
