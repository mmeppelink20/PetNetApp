@model DataObjects.Reply
@section styles
{
    <link href="~/Content/community.css" rel="stylesheet" />
}


<div class="text-center">
    <br />
    <h3>Are you sure you want to delete this reply?</h3>
    <p class="text-break delete-text-area">@Html.DisplayFor(model => model.ReplyContent)</p>
</div>

<div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            @Html.ActionLink("Cancel", "ShowReplies", "Community", new { id = Model.PostId }, new { @class = "btn btn-primary" })
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
