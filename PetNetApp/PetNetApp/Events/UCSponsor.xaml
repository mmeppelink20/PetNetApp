<UserControl x:Class="WpfPresentation.Events.UCSponsor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPresentation.Events"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="500">
    <Border BorderBrush="#1C6758" BorderThickness="2" CornerRadius="10">
        <Grid>
        
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
        
            <Label x:Name="lblSponsorName" Content="SponsorName" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22"/>
            <Button x:Name="btnRemove" Grid.Column="1" Content="Remove" Width="100" Height="50" Margin="10"/>
        </Grid>
    </Border>
</UserControl>
