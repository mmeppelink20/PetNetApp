<Window x:Class="WpfPresentation.Animals.AnimalUpdatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation.Animals"
        mc:Ignorable="d"
        Title="Animal Updates" Height="600" Width="450" Loaded="Window_Loaded">
    <Grid Background="#1C6758">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="287*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,10,10.2,10.4" Grid.ColumnSpan="2">
            <StackPanel x:Name="stpAnimalUpdates" Background="#3D8361">
                <Border x:Name="tbNoUpdate" Height="90" Width="300" Background="#D6CDA4" Margin="0 50 0 0">
                    <TextBlock  Foreground="#1C6758" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                           Text="There is no animal updates" FontSize="20"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
